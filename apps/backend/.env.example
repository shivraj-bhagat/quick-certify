# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
ENV=dev
APP_NAME="NestJS Boilerplate"
APP_PORT=3001
API_PREFIX=api
FRONTEND_DOMAIN=http://localhost:3000
BACKEND_DOMAIN=http://localhost:3001

# ===========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ===========================================
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=boilerplate_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_LOG=true
DATABASE_SYNCHRONIZE=true

# SSL Configuration (for production)
DATABASE_SSL_ENABLED=false
DATABASE_REJECT_UNAUTHORIZED=false
# DATABASE_CA=
# DATABASE_KEY=
# DATABASE_CERT=

# ===========================================
# AUTHENTICATION CONFIGURATION
# ===========================================
# JWT Secret - Generate a strong secret: openssl rand -base64 64
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Token expiration (in seconds)
JWT_ACCESS_TOKEN_EXPIRES_IN=900        # 15 minutes
JWT_REFRESH_TOKEN_EXPIRES_IN=604800    # 7 days

# Password hashing
BCRYPT_SALT_ROUNDS=12

# Reset/Verification token expiration (in seconds)
PASSWORD_RESET_EXPIRES_IN=3600         # 1 hour
EMAIL_VERIFICATION_EXPIRES_IN=86400    # 24 hours

# ===========================================
# EMAIL CONFIGURATION (Nodemailer)
# ===========================================
# SMTP Settings
MAIL_HOST=smtp.ethereal.email
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=
MAIL_PASS=
MAIL_FROM="Boilerplate App <noreply@example.com>"

# Preview mode (opens emails in browser instead of sending)
# Set to true for development
MAIL_PREVIEW=true

# Templates directory (relative to project root)
MAIL_TEMPLATES_DIR=./templates

# ===========================================
# SMS CONFIGURATION (Twilio)
# ===========================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Preview mode (shows SMS in browser instead of sending)
# Set to true for development
TWILIO_PREVIEW_MODE=true
