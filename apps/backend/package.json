{
  "name": "backend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "migration:run": "ts-node src/database/run-migrations.ts up",
    "migration:rollback": "ts-node src/database/run-migrations.ts down",
    "migration:status": "ts-node src/database/run-migrations.ts status",
    "migration:fresh": "ts-node src/database/run-migrations.ts fresh",
    "seed:run": "ts-node src/database/run-migrations.ts seed"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=prod"
          ],
          "cwd": "apps/backend"
        },
        "configurations": {
          "dev": {
            "args": [
              "--node-env=dev"
            ]
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/backend/dist/package.json",
          "{workspaceRoot}/apps/backend/dist/package-lock.json"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/backend/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "executor": "nx:run-commands",
        "defaultConfiguration": "dev",
        "options": {
          "command": "node dist/main.js",
          "cwd": "apps/backend"
        },
        "configurations": {
          "dev": {
            "command": "nest start --watch",
            "cwd": "apps/backend"
          },
          "prod": {
            "dependsOn": [
              "build"
            ],
            "command": "node dist/main.js",
            "cwd": "apps/backend"
          }
        }
      },
      "migration:run": {
        "executor": "nx:run-commands",
        "options": {
          "command": "ts-node src/database/run-migrations.ts up",
          "cwd": "apps/backend"
        }
      },
      "migration:rollback": {
        "executor": "nx:run-commands",
        "options": {
          "command": "ts-node src/database/run-migrations.ts down",
          "cwd": "apps/backend"
        }
      },
      "migration:status": {
        "executor": "nx:run-commands",
        "options": {
          "command": "ts-node src/database/run-migrations.ts status",
          "cwd": "apps/backend"
        }
      },
      "migration:fresh": {
        "executor": "nx:run-commands",
        "options": {
          "command": "ts-node src/database/run-migrations.ts fresh",
          "cwd": "apps/backend"
        }
      },
      "seed:run": {
        "executor": "nx:run-commands",
        "options": {
          "command": "ts-node src/database/run-migrations.ts seed",
          "cwd": "apps/backend"
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  },
  "dependencies": {
    "@crownstack/mailer": "*",
    "@crownstack/sms": "*",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/sequelize": "^11.0.1",
    "@nestjs/swagger": "^11.2.3",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "handlebars": "^4.7.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cookie-parser": "^1.4.7",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/testing": "^11.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.10",
    "@types/sequelize": "^4.28.20",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2"
  }
}
