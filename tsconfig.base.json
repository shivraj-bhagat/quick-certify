{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@org/source"],
    "paths": {
      "@boilerplate/mailer": ["packages/mailer/src/index.ts"],
      "@boilerplate/mailer/*": ["packages/mailer/src/*"],
      "@boilerplate/sms": ["packages/sms/src/index.ts"],
      "@boilerplate/sms/*": ["packages/sms/src/*"]
    }
  }
}
